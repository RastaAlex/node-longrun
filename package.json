{
  "name": "longrun",
  "version": "4.0.10",
  "description": "Run set of commands in group of directories",
  "main": "lib/longrun.js",
  "bin": {
    "longrun": "bin/longrun.js"
  },
  "scripts": {
    "test": "tape 'test/**/*.js'",
    "watch": "nodemon --watch lib --watch test --exec",
    "watch:test": "npm run watch -- \"npm test\"",
    "lint:eslint": "eslint lib test --ignore-pattern lib/cli.js",
    "lint:eslint:bin": "eslint bin lib/cli.js --config .eslint-bin.rc",
    "lint": "redrun lint:*",
    "jscs-fix": "npm run jscs --fix",
    "coverage": "nyc npm test",
    "watch:coverage": "redrun watch -- redrun coverage",
    "report": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/coderaiser/node-longrun.git"
  },
  "keywords": [
    "run",
    "runny",
    "directory",
    "shell",
    "execute",
    "spawn"
  ],
  "author": "coderaiser <mnemonic.enemy@gmail.com> (http://coderaiser.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coderaiser/node-longrun/issues"
  },
  "homepage": "https://github.com/coderaiser/node-longrun",
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "eslint": "^5.0.0",
    "nodemon": "^1.9.2",
    "nyc": "^12.0.2",
    "redrun": "^6.0.0",
    "sinon": "^6.0.0",
    "tape": "^4.5.1"
  },
  "dependencies": {
    "apart": "^1.0.1",
    "async": "^2.0.0",
    "currify": "^2.0.0",
    "itchy": "^1.0.0",
    "readjson": "^1.1.3",
    "runny": "^2.0.0",
    "squad": "^2.0.0",
    "tildify": "^1.2.0",
    "writejson": "^2.0.0",
    "yargs": "^12.0.1"
  }
}
