{
  "name": "longrun",
  "version": "2.0.1",
  "description": "Run set of commands in group of directories",
  "main": "lib/longrun.js",
  "bin": {
    "longrun": "bin/longrun.js"
  },
  "scripts": {
    "test": "tape 'test/**/*.js'",
    "watch": "nodemon --watch lib --watch test --exec",
    "watch:test": "watch -- npm test",
    "jscs": "jscs --esnext lib test",
    "jshint": "jshint lib test",
    "lint": "redrun jshint jscs",
    "jscs-fix": "npm run jscs --fix",
    "coverage": "nyc npm test",
    "report": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/coderaiser/node-longrun.git"
  },
  "keywords": [
    "run",
    "runny",
    "directory",
    "shell",
    "execute",
    "spawn"
  ],
  "author": "coderaiser <mnemonic.enemy@gmail.com> (http://coderaiser.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coderaiser/node-longrun/issues"
  },
  "homepage": "https://github.com/coderaiser/node-longrun",
  "engines": {
    "node": ">=4"
  },
  "devDependencies": {
    "coveralls": "^2.11.6",
    "jscs": "^3.0.1",
    "jshint": "^2.8.0",
    "nodemon": "^1.9.2",
    "nyc": "^6.1.1",
    "redrun": "^3.0.0",
    "tape": "^4.5.1"
  },
  "dependencies": {
    "async": "^2.0.0-rc.4",
    "currify": "^1.0.0",
    "readjson": "^1.1.3",
    "runny": "^1.4.0",
    "squad": "^1.1.3",
    "tildify": "^1.2.0",
    "try-catch": "^1.0.0",
    "writejson": "^1.1.1",
    "yargs": "^4.7.1"
  }
}
